# ClubLog HA Bridge - Environment Configuration
# Copy this file to .env and fill in your values

# ==============================================================================
# ClubLog API Credentials (REQUIRED)
# ==============================================================================
# Request an API key at https://clublog.org/need_api.php
CLUBLOG_API_KEY=YOUR_API_KEY_HERE
# Your ClubLog account email
CLUBLOG_EMAIL=your@email.com
# Application Password (generate in ClubLog settings, NOT your login password)
CLUBLOG_APP_PASSWORD=YOUR_APP_PASSWORD_HERE

# ==============================================================================
# Core Identity (REQUIRED)
# ==============================================================================
# Your amateur radio callsign
MY_CALLSIGN=YOUR_CALLSIGN

# ==============================================================================
# Home Assistant MQTT Broker (REQUIRED for Docker mode)
# ==============================================================================
HA_MQTT_BROKER=YOUR_MQTT_BROKER_IP
HA_MQTT_PORT=1883
HA_MQTT_USER=
HA_MQTT_PASS=

# ==============================================================================
# Debugging
# ==============================================================================
DEBUG_MODE=False

# ==============================================================================
# Poll Intervals (seconds)
# ==============================================================================
# DXCC matrix polling interval (default: 3600 = 60 minutes, minimum recommended)
MATRIX_INTERVAL=3600
# Watch/monitor polling interval (default: 600 = 10 minutes)
WATCH_INTERVAL=600
# Most wanted polling interval (default: 86400 = 24 hours)
MOST_WANTED_INTERVAL=86400
# Activity data polling interval (default: 3600 = 60 minutes)
ACTIVITY_INTERVAL=3600
# Expeditions polling interval (default: 3600 = 60 minutes)
EXPEDITIONS_INTERVAL=3600

# ==============================================================================
# Cross-Project Integration
# ==============================================================================
# Path to export wanted list file (consumed by pskr-ha-bridge / wspr-ha-bridge)
# WANTED_LIST_EXPORT_PATH=/data/clublog_wanted.txt

# ==============================================================================
# Home Assistant Discovery
# ==============================================================================
HA_DISCOVERY_PREFIX=homeassistant
HA_ENTITY_BASE=clublog
